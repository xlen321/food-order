{
    "compilerOptions": {
      "target": "ES2020",                   // Use ES2020 or later
      "module": "ESNext",                   // Use ES Modules
      "rootDir": "./src",                   // Root directory of input files
      "outDir": "./dist",                   // Output directory for compiled files
      "strict": true,                      // Enable strict type-checking
      "esModuleInterop": true,             // Allows for easier import of CommonJS modules
      "skipLibCheck": true,                // Skip type checking of declaration files
      "moduleResolution": "node",          // Use Node module resolution
      "forceConsistentCasingInFileNames": true
    },
    "include": ["src"],                    // Include source files
    "exclude": ["node_modules", "dist"]    // Exclude folders
  }
  